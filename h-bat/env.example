# H-BAT Application Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app-domain.vercel.app

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_ID=your-project-id

# Database Configuration (if using direct connection)
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# Authentication Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://your-app-domain.vercel.app

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password

# Audio Configuration
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=44100
NEXT_PUBLIC_AUDIO_BUFFER_SIZE=256

# Test Configuration
NEXT_PUBLIC_MAX_TRIALS=50
NEXT_PUBLIC_TARGET_REVERSALS=6
NEXT_PUBLIC_INITIAL_STEP_SIZE=8

# Monitoring & Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Rate Limiting (Optional)
UPSTASH_REDIS_REST_URL=your-redis-url
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Email Configuration (Optional)
EMAIL_SERVER_HOST=smtp.your-provider.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@domain.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@your-domain.com

# Security Configuration
CSP_REPORT_URI=https://your-app-domain.vercel.app/api/csp-report
ALLOWED_ORIGINS=https://your-app-domain.vercel.app,https://your-staging-domain.vercel.app 